# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Which settings module to load. Use 'standup_bot.settings.dev' locally
# and 'standup_bot.settings.prod' in production (set this in Railway).
DJANGO_SETTINGS_MODULE=standup_bot.settings.dev

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Celery / Redis
# In Railway, CELERY_BROKER_URL should point to the Redis plugin URL.
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# Database (production only â€” ignored in dev which uses SQLite)
# In Railway, you can use DATABASE_URL (auto-injected by the Postgres plugin) OR
# set the individual DB_* variables below. prod.py reads the individual vars.
DB_NAME=standup_bot
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Optional settings (all have safe defaults in the code)
STANDUP_RETENTION_DAYS=30
MORNING_CHECKIN_HOUR=8
EVENING_DIGEST_HOUR=18
PURGE_TASK_HOUR=2
MORNING_DIGEST_HOUR=8

# Google Calendar OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
